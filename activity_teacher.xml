<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="?android:attr/windowBackground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="НАСТРОЙКИ УЧИТЕЛЯ"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:gravity="center"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email для получения отчетов:"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="14sp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/etTeacherEmailStorage"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="example@gmail.com"
        android:textColor="?android:attr/textColorPrimary"
        android:textColorHint="#888888"
        android:background="@android:drawable/editbox_background"
        android:padding="12dp"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnSaveEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="СОХРАНИТЬ ПОЧТУ"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnShareApp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ПОДЕЛИТЬСЯ ПРИЛОЖЕНИЕМ"
        android:layout_marginBottom="10dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <Button
        android:id="@+id/btnChangeTheme"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="СМЕНИТЬ ТЕМУ (СВЕТЛАЯ/ТЕМНАЯ)"
        android:layout_marginTop="10dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Пароль для этого раздела: 1234"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="12sp"
        android:gravity="center"/>

</LinearLayout>